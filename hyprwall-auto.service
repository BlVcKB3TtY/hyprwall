[Unit]
Description=HyprWall Auto Power Profile Switcher
Documentation=https://github.com/TheOnlyChou/hyprwall
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.local/bin/hyprwall auto
Restart=always
RestartSec=2
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=default.target